{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "references": [
        {
            "path": "../../tsconfig.node.json"
        }
    ]
}
