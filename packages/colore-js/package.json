{
    "author": "Ty Eggen",
    "dependencies": {
        "deepmerge": "^4.3.1",
        "ejs": "^3.1.9",
        "sprintf": "^0.1.5",
        "uuid": "^9.0.1"
    },
    "description": "",
    "devDependencies": {
        "@types/ejs": "^3.1.5",
        "@types/node": "^20.8.9",
        "@types/sprintf": "^0.1.1",
        "@types/uuid": "^9.0.6",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.1.1",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-n": "^16.2.0",
        "eslint-plugin-promise": "^6.1.1",
        "git-cz": "^4.9.0",
        "prettier": "^3.0.3",
        "ts-auto-guard": "^4.1.4",
        "ts-node": "^10.9.1",
        "tsup": "^8.3.0",
        "typescript": "^5.2.2",
        "wireit": "^0.14.9"
    },
    "exports": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
    },
    "files": [
        "./dist"
    ],
    "keywords": [],
    "license": "ISC",
    "name": "@colore/colore-js",
    "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228",
    "scripts": {
        "build": "wireit",
        "build:src": "wireit",
        "build:types": "wireit",
        "prepublishOnly": "pnpm run build",
        "type-check": "wireit"
    },
    "type": "module",
    "types": "dist/index.d.ts",
    "version": "1.0.0",
    "wireit": {
        "build:src": {
            "clean": true,
            "command": "tsup --format cjs,esm --outDir dist",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/**/*.ts"
            ],
            "output": [
                "dist/**/*"
            ]
        },
        "build:types": {
            "clean": true,
            "command": "tsup src/index.ts --format esm --outDir dist --dts-only ",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/index.ts"
            ],
            "output": [
                "dist/index.ts"
            ]
        },
        "build": {
            "dependencies": [
                "type-check",
                "build:src",
                "build:types"
            ]
        },
        "type-check": {
            "command": "tsc --noEmit"
        }
    }
}
