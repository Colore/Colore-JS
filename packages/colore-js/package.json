{
    "$schema": "https://json.schemastore.org/package",
    "author": "Ty Eggen",
    "dependencies": {
        "deepmerge": "^4.3.1",
        "ejs": "^3.1.10",
        "sprintf": "^0.1.5",
        "uuid": "^9.0.1"
    },
    "description": "",
    "devDependencies": {
        "@tyisi/config-eslint": "^1.0.0",
        "@tyisi/config-prettier": "^1.0.0",
        "@types/ejs": "^3.1.5",
        "@types/node": "^20.8.9",
        "@types/sprintf": "^0.1.1",
        "@types/uuid": "^9.0.6",
        "eslint": "^9.13.0",
        "eslint-plugin-tsdoc": "^0.3.0",
        "git-cz": "^4.9.0",
        "prettier": "^3.3.3",
        "ts-auto-guard": "^4.1.4",
        "ts-node": "^10.9.1",
        "tsup": "^8.3.0",
        "typescript": "^5.2.2",
        "wireit": "^0.14.9"
    },
    "main": "./dist/esm/index.mjs",
    "types": "./dist/esm/index.d.mts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.mts",
                "default": "./dist/esm/index.mjs"
            },
            "require": {
                "types": "./dist/cjs/index.d.cts",
                "default": "./dist/cjs/index.cjs"
            }
        }
    },
    "files": [
        "./dist"
    ],
    "keywords": [],
    "license": "ISC",
    "name": "@colore/colore-js",
    "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228",
    "scripts": {
        "build": "wireit",
        "build:src": "wireit",
        "build:types": "wireit",
        "build:types:test": "wireit",
        "commit": "pnpm dlx git-cz@latest --scope=implementation",
        "prepublishOnly": "pnpm run build",
        "type-check": "wireit"
    },
    "type": "module",
    "version": "1.0.0",
    "wireit": {
        "build": {
            "dependencies": [
                "type-check",
                "build:src",
                "build:test"
            ]
        },
        "build:src": {
            "dependencies": [
                "type-check",
                "build:src:cjs",
                "build:src:esm"
            ],
            "command": "./tools/fix-dist-extensions.sh"
        },
        "build:src:cjs": {
            "clean": true,
            "command": "tsup --format cjs --outDir dist/cjs && tsup src/index.ts --format cjs --outDir dist/cjs --dts-only",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/**/*.ts"
            ],
            "output": [
                "dist/cjs/**/*"
            ]
        },
        "build:src:esm": {
            "clean": true,
            "command": "tsup --format esm --outDir dist/esm && tsup src/index.ts --format esm --outDir dist/esm --dts-only",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/**/*.ts"
            ],
            "output": [
                "dist/esm/**/*"
            ]
        },
        "build:test": {
            "dependencies": [
                "build:test:types"
            ]
        },
        "build:test:types": {
            "command": "pnpm dlx @arethetypeswrong/cli@latest --pack .",
            "dependencies": [
                "build:src"
            ]
        },
        "type-check": {
            "command": "tsc --noEmit"
        }
    }
}
